    {
        <li class="menu-title"><i class="ri-more-line"></i><span data-key="t-menu">Home</span></li>
        <li class="nav-item">
            <a class="nav-link menu-link" href="@Url.Action("Index", "Inventory")" id="Dashboardlink">
