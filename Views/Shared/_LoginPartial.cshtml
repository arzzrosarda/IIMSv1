        <li class="nav-item">
            <a class="nav-link  menu-link" href="@Url.Action("Index", "Admin")" id="Dashboardlink">
                <i class="ri-lg ri-dashboard-line"></i>
                <span>Dashboard</span>
            </a>
        </li>
        <li class="menu-title"><i class="ri-more-line"></i><span data-key="t-menu">User</span></li>
        <li class="nav-item">
            <a class="nav-link menu-link" href="@Url.Action("Index", "User")" id="Userlink">
                <i class="ri-lg ri-team-line"></i>
                <span>Manage Users</span>
            </a>
        </li>
        <li class="menu-title"><i class="ri-more-line"></i><span data-key="t-menu">Department</span></li>
        <li class="nav-item" >
            <a class="nav-link menu-link" href="@Url.Action("Index", "Department")" id="Departmentlink">
