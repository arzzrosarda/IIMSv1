<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
            <h4 class="mb-sm-0">@ViewBag.title &nbsp;</h4>
            @if (ViewBag.subtitle != null)
            {
                @Html.Raw(ViewBag.subtitle)
            }
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Content("~/"+ViewBag.Role)" title="Home"><i class="ri-lg ri-home-4-line"></i></a></li>
                    @Html.Raw(ViewBag.breadcrumbs)
                    @* <li class="breadcrumb-item"><a href="javascript: void(0);">@ViewBag.pagetitle</a></li>
                <li class="breadcrumb-item active">@ViewBag.ptitle</li> *@
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->