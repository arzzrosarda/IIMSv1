@using IIMSv1.Models.Shared
@using IIMSv1.Models
@model DepartmentInputModel

@{
    var Path = Context.Request.Path;
    var QueryStrings = Context.Request.QueryString;
    var Url = Path + QueryStrings;
}
<form asp-action="_AddDepartment" asp-controller="Department">
    <div id="modal-add-dept" class="modal zoomIn" tabindex="-1" aria-labelledby="modal-add-dept" >
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header bg-light pt-3 pb-3">
                    <h5 class="modal-title">DEPARTMENT</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="hidden" name="returnUrl" value="@Url" />
                                <label asp-for="Name"></label> <span class="text-danger">*</span>
                                <input class="form-control" asp-for="Name" id="DepartmentNameInput" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="DisplayName"></label> <span class="text-danger">*</span>
                                <input class="form-control" asp-for="DisplayName" id="DisplayDepartmentName" />
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Cluster"></label> <span class="text-danger">*</span>
                                <select class="form-select" asp-for="Cluster" asp-items="@(new SelectList(Model.Clusters, "Id", "Name"))">
                                    <option value="">Select Cluster</option>
                                </select>
                                <span asp-validation-for="Cluster" class="text-danger"></span>
                            </div>
                        </div>
                   </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-light waves-effect waves-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-secondary waves-effect waves-light">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>