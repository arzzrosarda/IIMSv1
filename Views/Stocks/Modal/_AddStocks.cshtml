@using IIMSv1.Models.Shared
@using IIMSv1.Models
@model StockInputModel

@{
    var Path = Context.Request.Path;
    var QueryStrings = Context.Request.QueryString;
    var returnURl = Path + QueryStrings;
}
<form asp-action="_AddStocks" asp-controller="Stocks" name="addStocksForm">
    <div id="modal-new-item" class="modal zoomIn" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title ml-3">ADD ITEM</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Item"></label><span class="text-danger"> * </span>
                                    <input class="form-select" type="hidden" value="@returnURl" asp-for="returnUrl" />
                                    <select class="form-select select2 text-left" id="ItemSel" asp-for="Item">
                                        <option value="">Select Item...</option>
                                        @foreach (var item in Model.items)
                                        {
                                            <option value="@item.Id">@item.ItemName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Item" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">&nbsp;</div>
                        </div>
                        <div class="row ">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Quantity"></label><span class="text-danger"> * </span>
                                    <input asp-for="Quantity" class="form-control" type="number" id="EstPriceQuantityStocks" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2">
                        <div>
                            <span class="text-danger">* </span> required
                        </div>
                        <button type="reset" class="btn btn-light waves-effect waves-light ms-auto" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-secondary waves-effect waves-light" id="btnSubmitAddStock">Submit</button>
                        <button type="submit" class="btn" id="submitNewAddStock" style="display: none;"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
