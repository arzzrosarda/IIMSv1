@using IIMSv1.Models.Shared
@using IIMSv1.Models
@model StockEditModel
@{
    var Path = Context.Request.Path;
    var QueryStrings = Context.Request.QueryString;
    var returnURl = Path + QueryStrings;
}
<form asp-action="_EditStocks" asp-controller="Stocks">
    <div id="modal-edit-stocks" class="modal zoomIn" tabindex="-1" aria-labelledby="modal-edit-stocks" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-light pt-3 pb-3">
                    <h5 class="modal-title">EDIT</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 mb-3">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td>ITEM: </td>
                                        <td id="EditItemNameStock"></td>
                                    </tr>
                                    <tr>
                                        <td>REMAINING STOCKS: </td>
                                        <td id="EditQuantityStock"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                       <div class="col-lg-12 border border-white p-3">
                            <input class="form-control" asp-for="returnUrl" value="@returnURl" type="hidden" />
                            <input class="form-control" asp-for="ItemId" id="EditItemIdStock" type="hidden" />
                            <input class="form-control" asp-for="QuantityBefore" id="EditBeforeQuantityStock" type="hidden" />
                           <label asp-for="Quantity"></label>
                           <input class="form-control" asp-for="Quantity" id="EditItemQuantityStock" type="text"/>
                           <span class="text-danger" asp-validation-for="Quantity"></span>
                       </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-light waves-effect waves-light" data-bs-dismiss="modal" type="reset">Cancel</button>
                    <button type="submit" class="btn btn-label btn-secondary waves-effect waves-light">
                        <i class="ri-lg ri-save-2-line label-icon align-middle fs-16 me-2"></i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>