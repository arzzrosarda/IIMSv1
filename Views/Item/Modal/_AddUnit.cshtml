@using IIMSv1.Models.Shared
@using IIMSv1.Models
@model AddUnitModel

<form name="AddUnitForm">
    <div id="modal-add-unit" class="modal fade" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">UNIT TYPE</h5>
                    <button type="button" class="btn-close btnCancelAdd" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="Unit"></label> <span class="text-danger">*</span>
                                <input class="form-control text-uppercase" asp-for="Unit" id="itemUnitInput" onchange="$(this).val($(this).val().trim())" autocomplete="off" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-light waves-effect waves-light btnCancelAdd" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-label btn-secondary waves-effect waves-light btn-Add-Unit-Type">
                        <i class="ri-lg ri-save-3-line label-icon align-middle fs-16 me-2"></i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>