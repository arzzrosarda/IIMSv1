@using IIMSv1.Models.Shared
@using IIMSv1.Models

<div id="modal-edit-type" class="modal fade" tabindex="-1" aria-labelledby="modal-edit-type" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <input id="TypeIdEdit" name="TypeId" class="form-select" type="hidden" />
                        <div class="form-group">
                            <label>Value</label> <span class="text-danger">*</span>
                            <input class="form-select" name="Value" id="ValueEdit" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </div>
        </div>
    </div>
</div>