@using IIMSv1.Data
@using IIMSv1.Models
@using IIMSv1.Models.Shared
@using Microsoft.AspNetCore.Identity

@model _UserUpdateCredentials
@{
    AccountUser accountUser = ViewBag.User;
}
<form asp-action="_ResetCredentials" asp-controller="Profile" name="ResetCredentialsForm">
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <input asp-for="UserId" value="@accountUser.Id" />
            <div class="form-group">
                    <label asp-for="UserName"></label> <span class="text-danger">*</span>
                <input asp-for="UserName" class="form-select"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Password"></label> <span class="text-danger">*</span>
                <input asp-for="Password" class="form-select"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label> <span class="text-danger">*</span>
                    <input asp-for="ConfirmPassword" class="form-select" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-lg-12 mt-3">
                    <div class="alert alert-light mb-2">
                        Password must have:
                        <ul>
                            <li>at least 6 characters</li>
                            <li>at least 1 non-alphanumeric character</li>
                            <li>at least 1 digit (0-9)</li>
                            <li>at least 1 UPPERCASE letter (A-Z)</li>
                        </ul>
                    </div>
                </div>
                <div class="row border-top pt-4">
                    <div class="col-lg-6">
                        <span class="text-danger">*</span> required
                    </div>
                    <div class="col-lg-6 text-right">
                        <button type="reset" class="btn btn-light"> Reset </button>&nbsp;
                        <button type="button" class="btn btn-light" id="btnResetCredentials"><span class="text-warning"><i class="bi bi-exclamation-triangle-fill"></i>&nbsp;</span> Reset Credential</button>
                    </div>
                </div>
        </div>
    </div>
</div>
</form>