@using IIMSv1.Data;
@using IIMSv1.Models.Shared
@using IIMSv1.Models
@using Microsoft.AspNetCore.Identity

@model _UserChangePassword

@{
    AccountUser accountUser = ViewBag.User;
}
<form asp-action="_ChangePassword" asp-controller="User">
    <div class="card-body">
        <div class="col-lg-12">
            <div class="row">
                <input asp-for="UserId" value="@accountUser.Id" />
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="OldPassword"></label> <span class="text-danger">*</span>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 mt-3">
                    <div class="form-group">
                        <label asp-for="NewPassword"></label> <span class="text-danger">*</span>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 mt-3">
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword"></label> <span class="text-danger">*</span>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 mt-3">
                    <div class="alert alert-danger alert-border-left mb-0">
                        Password must have:
                        <ul>
                            <li>at least 6 characters</li>
                            <li>at least 1 non-alphanumeric character</li>
                            <li>at least 1 digit (0-9)</li>
                            <li>at least 1 UPPERCASE letter (A-Z)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="hstack gap-2">
            <div class="badge bg-primary-subtle text-secondary badge-border w-auto">
                <span class="text-danger">*</span> required
            </div>
            <button type="reset" class="btn btn-light btn-sm waves-effect waves-light ms-auto"> Cancel </button>
            <button type="submit" class="btn btn-label btn-info btn-sm waves-effect waves-light">
                <i class="ri-lg ri-save-3-line label-icon align-middle fs-16 me-2"></i>
                Save Changes
            </button>
        </div>
    </div>
</form>